{
  "name": "biology-graduation",
  "version": "1.0.0",
  "description": "Website for the biology graduation",
  "author": "GamesProSeif",
  "private": true,
  "main": "dist",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon . --watch dist",
    "watch": "tsc -w",
    "build": "nuxt build && tsc",
    "start": "cross-env NODE_ENV=production node .",
    "generate": "nuxt generate",
    "lint": "eslint --ext ts ."
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "bootstrap": "^4.1.3",
    "bootstrap-vue": "^2.0.0",
    "dotenv": "^8.1.0",
    "express": "^4.16.4",
    "express-formidable": "^1.2.0",
    "fs-extra": "^8.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.3.2",
    "morgan": "^1.9.1",
    "nuxt": "^2.0.0",
    "typeorm": "^0.2.19",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.2.1"
  },
  "devDependencies": {
    "@nuxt/types": "^0.3.1",
    "@nuxt/typescript-build": "^0.3.1",
    "@types/express": "^4.17.1",
    "@types/express-formidable": "^1.0.4",
    "@types/fs-extra": "^8.0.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.12",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-config-marine": "^5.1.0",
    "eslint-plugin-vue": "^5.2.3",
    "nodemon": "^1.18.9",
    "typescript": "^3.6.4"
  },
  "eslintConfig": {
    "extends": [
      "marine/node"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true
    },
    "rules": {
      "no-tabs": 0,
      "indent": [
        "error",
        "tab"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-extra-semi": [
        "error"
      ]
    }
  }
}
